{
    "comments": {
        "blockComment": [ "/*", "*/" ],
        "lineComment": "//"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*#?region\\b",
            "end": "^\\s*//\\s*#?endregion\\b"
        }
    },
    "indentationRules": {
		"increaseIndentPattern": "^\\s*((while|for).*?|if .* then|else( if)?.*?)\\s*$",
		"decreaseIndentPattern": "^\\s*(else( if)?.*?|(end (if|function|for|while)))\\s*$"
	}
}